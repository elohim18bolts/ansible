[Unit]
Description=Ansible pull service
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/bin/sh -c 'ansible-pull -U {{ repo_url }} --only-if-changed --directory {{ repo_local_directory }}  -i $(uname -n), {{ playbook_path }} | tee {{ log_file_path }}'
TimeoutStopSec=600

[Install]
WantedBy=basic.target
